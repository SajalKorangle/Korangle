{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@app/*": ["app/*"],
      "@modules/*": ["app/modules/*"],
      "@basic-components/*": ["app/basic-components/*"],
      "@classes/*": ["app/classes/*"],
      "@components/*": ["app/components/*"],
      "@services/*": ["app/services/*"],
      "@urls/*": ["app/urls/*"],
      "@test/*": ["test/*"]
    }
  },
  "files": [
    "test.ts",
    "../../src/polyfills.ts"
  ],
  "include": [
    "./**/*.spec.ts",
    "./**/*.d.ts"
  ]
}
