{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "commonjs",
    "baseUrl": "./",
    "types": [],
    "paths": {
      "@modules/*": ["app/modules/*"],
      "@basic-components/*": ["app/basic-components/*"],
      "@classes/*": ["app/classes/*"],
      "@components/*": ["app/components/*"],
      "@services/*": ["app/services/*"],
      "@urls/*": ["app/urls/*"],
      "moment": [
        "../node_modules/moment/min/moment.min.js"
      ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
