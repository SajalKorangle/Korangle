{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@modules/*": ["app/modules/*"],
      "@basic-components/*": ["app/basic-components/*"],
      "@classes/*": ["app/classes/*"],
      "@components/*": ["app/components/*"],
      "@services/*": ["app/services/*"],
      "@urls/*": ["app/urls/*"],
      "@mock-services/*": ["test/mock-services/*"],
      "@mock-api/*": ["test/mock-api/*"],
      "@mock-data/*": ["test/mock-data/*"]
    }
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "./**/*.spec.ts",
    "./**/*.d.ts"
  ]
}
