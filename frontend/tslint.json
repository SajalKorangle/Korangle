{
    "defaultSeverity": "error",
    "rulesDirectory": [
      "node_modules/codelyzer"
    ],
    "rules": {
      "max-line-length": [true, 160],
      "indent": [true, "spaces", 4],
      "semicolon": [true, "always"],
      "no-trailing-whitespace": true,
      "whitespace": [
        true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-type-operator",
        "check-separator",
        "check-type",
        "check-preblock"
      ]
    }
}
