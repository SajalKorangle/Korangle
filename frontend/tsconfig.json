{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "downlevelIteration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {  // dummy paths, original tsconfig: frontend/src/tsconfig.app.json
      "@modules/*": ["app/modules/*"],
      "@basic-components/*": ["app/basic-components/*"],
      "@classes/*": ["app/classes/*"],
      "@components/*": ["app/components/*"],
      "@services/*": ["app/services/*"],
      "@urls/*": ["app/urls/*"],
      "moment": [
        "../node_modules/moment/min/moment.min.js"
      ],
      "xlsx": [
        "../node_modules/xlsx/dist/xlsx.mini.min.js"
      ]
    }
  }
}
